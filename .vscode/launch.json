    "version": "0.2.0",
    "configurations": [
        {
            "name": "[PYTHON]: ms debug",
            "type": "python",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "[PYTHON]: ms test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH" : "${workspaceFolder}/src"
            }
        }
    ]
}